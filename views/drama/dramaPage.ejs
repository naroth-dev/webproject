<% include ../partials/header.ejs %>



    <header class="container">
        <h1>This is a Drama Page</h1>
        <p><a class="btn btn-primary" href="/drama/new">Add New Drama</a></p>
    </header>

    <div class="container">
        <div class="row d-flex flex-wrap">
            
            <% dramaList.forEach(function(drama){ %>
                <div class="col-lg-3 col-sm-6">
                    <div class="card" style="width: 17rem;">
                        <img src="<%= drama.image%>">
                        <div class="card-body text-center">
                            <h5 class="card-title "><%=drama.title%></h5>
                            <div class="d-flex flex-wrap" style="padding-left: 25%;">
                                <a href="/drama/<%= drama.title%>" class="btn btn-info">M</a>
                                <a href="/drama/<%= drama.title%>/watch" class="btn btn-primary">W</a>
                                <a href="/drama/<%= drama.title%>/edit" class="btn btn-warning">E</a>
                                <form action="/drama/<%= drama.title%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">X</button>
                                </form>
                            </div>
                            
                            
                           
                        </div>
                    </div>

                </div>
            <% }); %> 
            
        </div>
    </div>
<% include ../partials/footer.ejs %>